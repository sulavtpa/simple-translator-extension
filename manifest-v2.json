{
  "manifest_version": 2,
  "name": "Simple Text Translator",
  "version": "2.0.0",
  "description": "Fast, free, and privacy-focused text translator.",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "https://translate.googleapis.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Translator Settings"
  },
  "commands": {
    "translate_selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Translate selected text"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
